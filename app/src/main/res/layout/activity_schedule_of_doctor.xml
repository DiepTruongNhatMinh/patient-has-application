<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScheduleOfDoctor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/doctor_ex"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Experience: "
            android:fontFamily="@font/poppins_bold"
            android:background="@color/teal_200"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Price: "
            android:background="@color/colorAccent"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Reason: "
            android:background="@color/blue_neon"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/ed_reason"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:hint="Tell your doctor more about why you want to schedule an appointment" />

    </LinearLayout>

    <ListView
        android:id="@+id/timetableListView"
        android:background="@drawable/background2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:choiceMode="multipleChoice" />
    <Button
        android:id="@+id/bt_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_round"
        android:fontFamily="@font/poppins_bold"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:text="Back to home"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_round"/>
</LinearLayout>